{
  "processors": ["stylelint-processor-styled-components"],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components"
  ],
  "plugins": ["stylelint-no-unsupported-browser-features"],
  "rules": {
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": [
          "ChromeAndroid >= 70",
          "Chrome >= 70",
          "Firefox >= 63",
          "Edge >= 16",
          "Safari >= 11",
          "iOS >= 11.2"
        ],
        "severity": "warning"
      }
    ]
  }
}
