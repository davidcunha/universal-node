{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "plugins": ["react", "compat"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "polyfills": ["fetch", "promises"],
    "import/resolver": {
      "babel-plugin-root-import": {
        "rootPathPrefix": "~",
        "rootPathSuffix": "client"
      }
    }
  },
  "rules": {
    "compat/compat": "error",
    "class-methods-use-this": [
      2,
      {
        "exceptMethods": ["render"]
      }
    ]
  }
}
