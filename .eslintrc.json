{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "compat"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "polyfills": ["fetch"]
  },
  "rules": {
    "compat/compat": "error",
    "class-methods-use-this": [2, {
      "exceptMethods": [
        "render"
      ]
    }]
  }
}
